
@model AppointmentBookingSystem.Models.Appointment
@{
    ViewData["Title"] = "Confirmed";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-7">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 p-lg-5">
                <div class="d-flex align-items-center gap-2 mb-3">
                    <span class="badge bg-success">Confirmed</span>
                    <h2 class="mb-0">Your appointment is booked</h2>
                </div>

                <div class="mt-3">
                    <div class="mb-2"><strong>Name:</strong> @Model.CustomerName</div>
                    <div class="mb-2"><strong>Email:</strong> @Model.Email</div>
                    <div class="mb-2"><strong>Date/Time:</strong> @Model.AppointmentDate.ToString("MMM dd, yyyy h:mm tt")</div>
                    <div class="mb-2"><strong>Service:</strong> @Model.Service</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <div class="mb-2"><strong>Notes:</strong> @Model.Notes</div>
                    }
                </div>

                <div class="d-flex gap-2 mt-4">
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">View Schedule</a>
                </div>
            </div>
        </div>
    </div>
</div>
