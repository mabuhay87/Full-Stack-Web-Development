
@model AppointmentBookingSystem.Models.Appointment
@{
    ViewData["Title"] = "Book Appointment";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-7">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-lg-5">
                <h2 class="mb-1">Book an Appointment</h2>
                <p class="text-muted mb-4">Choose a service and time. Weâ€™ll confirm instantly.</p>

                <form method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input asp-for="CustomerName" class="form-control" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Date & Time</label>
                            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Service</label>
                            <select asp-for="Service" class="form-select">
                                <option>Consultation</option>
                                <option>Haircut</option>
                                <option>Therapy</option>
                            </select>
                            <span asp-validation-for="Service" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Notes (optional)</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Confirm Booking</button>
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
